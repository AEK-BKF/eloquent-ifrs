{
    "name": "ekmungai/laravel-ifrs",
    "description": "Laravel Double Entry Accounting with focus on IFRS Compliant Reporting",
    "keywords": ["accounting", "laravel", "reporting"],
    "type": "library",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/ekmungai/laravel-ifrs/issues",
        "source": "https://github.com/ekmungai/laravel-ifrs"
    },
    "authors": [
        {
            "name": "Edward Mungai",
            "email": "emungai@pinecrest.co.ke"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": "^7.2",
		"illuminate/database": "^6.0",
		"illuminate/auth": "^6.0"
    },
    "require-dev": {
        "facade/ignition": "^1.4",
        "friendsofphp/php-cs-fixer": "^2.16",
        "fzaninotto/faker": "^1.4",
        "mockery/mockery": "^1.0",
        "nunomaduro/collision": "^3.0",
        "nunomaduro/larastan": "^0.5.0",
        "phpmd/phpmd": "^2.8",
        "phpunit/phpunit": "^8.0",
        "squizlabs/php_codesniffer": "*",
		"orchestra/testbench": "^4.7.0"
    },
	"autoload": {
		"psr-4": {
			"Ekmungai\\IFRS\\": "src"
			},
			"classmap": [
				"database/factories"
			]
		},
	"autoload-dev": {
		"psr-4": {
			"Ekmungai\\IFRS\\Tests\\": "tests"
		}
	},
	"extra": {
		"laravel": {
			"providers": [
				"Ekmungai\\Laravel-IFRS\\IFRSServiceProvider"
			]
		}
	}
}
